{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-config-airbnb"
    ],
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "no-param-reassign": false,
        "ter-indent": [true, 4, {
            "SwitchCase": 1
        }],
        "quotemark": false,
        "no-increment-decrement": false,
        "ter-arrow-parens": false,
        "member-ordering": [
            true
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "max-line-length": [
            false
        ],
        "eofline": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "arrow-return-shorthand": [
            true
        ],
        "unified-signatures": true,
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "ordered-imports": [
            false
        ],
        "whitespace": [
            false,
            "check-module",
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "angular-whitespace": [true, "check-interpolation", "check-pipe"],
        "banana-in-box": true,
        "templates-no-negated-async": true,
        "directive-selector": [true, "attribute", "sg", "camelCase"],
        "component-selector": [false, "element", "sg", "kebab-case"],
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-attribute-parameter-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "no-forward-ref": true,
        "use-view-encapsulation": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "pipe-naming": [true, "camelCase", "sg"],
        "component-class-suffix": false,
        "directive-class-suffix": true,
        "templates-use-public": true,
        "no-access-missing-member": true,
        "invoke-injectable": true,
        "template-to-ng-template": true
    },
    "jsRules": {
        "no-console": [
            false
        ],
        "eofline": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "max-line-length": [
            false
        ],
        "object-literal-sort-keys": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            false,
            "tabs"
        ],
        "no-duplicate-variable": true,
        "no-unused-variable": [
            true
        ],
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}